<CalcGridLayout>:
    id: calculadora
    display: entrada
    rows: 3
    font_size: 36

    BoxLayout:
        TextInput:
            id: entrada
            font_size: 30


    GridLayout:
        rows: 5
        cols: 4
        Button:
            text: "7"
            on_press: entrada.text += self.text
        Button:
            text: "8"
            on_press: entrada.text += self.text
        Button:
            text: "9"
            on_press: entrada.text += self.text
        Button:
            text: "/"
            on_press: entrada.text += self.text
        Button:
            text: "4"
            on_press: entrada.text += self.text
        Button:
            text: "5"
            on_press: entrada.text += self.text
        Button:
            text: "6"
            on_press: entrada.text += self.text
        Button:
            text: "*"
            on_press: entrada.text += self.text
        Button:
            text: "1"
            on_press: entrada.text += self.text
        Button:
            text: "2"
            on_press: entrada.text += self.text
        Button:
            text: "3"
            on_press: entrada.text += self.text
        Button:
            text: "-"
            on_press: entrada.text += self.text
        Button:
            text: "C"
            on_press: entrada.text = ""
        Button:
            text: "0"
            on_press: entrada.text += self.text
        Button:
            text: "="
            on_press: calculadora.Calculo(entrada.text)
        Button:
            text: "+"
            on_press: entrada.text += self.text